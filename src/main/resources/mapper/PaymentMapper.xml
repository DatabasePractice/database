<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="webproject.mapper.PaymentMapper">
	
	<!--表名 -->
	<sql id="tableName">
		PAYMENT
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		PAY_ID,	
		CUSTOM_ID,	
		TIME,	
		PAY_METHOD,	
		QD,	
		EMPLOYEE_ID,	
		AMOUNT,	
		HALL_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{PAY_ID},	
		#{CUSTOM_ID},	
		#{TIME},	
		#{PAY_METHOD},	
		#{QD},	
		#{EMPLOYEE_ID},	
		#{AMOUNT},	
		#{HALL_ID},	
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			PAY_ID = #{PAY_ID}
			<!-- #{PAY_ID}是pagedata里的值 -->
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			PAY_ID = #{PAY_ID},
			CUSTOM_ID = #{CUSTOM_ID},
			TIME = #{TIME},
			PAY_METHOD = #{PAY_METHOD},
			QD = #{QD},
			EMPLOYEE_ID = #{EMPLOYEE_ID},
			AMOUNT = #{AMOUNT},
		    HALL_ID=#{HALL_ID}
		where 
		PAY_ID = #{PAY_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			PAY_ID = #{PAY_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
		1=1
		<!-- 关键词检索 -->
		<if test="PAY_ID!= null and PAY_ID != ''">
			and  PAY_ID = #{PAY_ID}				
		</if>
		<if test="CUSTOM_ID != null and CUSTOM_ID  != ''">
			and CUSTOM_ID = #{CUSTOM_ID}				
		</if>
<!-- 		XML中不允许出现 >或< 需要加<![CDATA[]]> 时间范围检索-->
		
		<if test="BEGINTIME!= null and BEGINTIME != ''">
		<![CDATA[	and  TIME>=#{BEGINTIME}	]]> 		
		</if>
		<if test="EMDTIME!= null and ENDTIME != ''">
		<![CDATA[	and  TIME <= #{ENDTIME}		]]>		
		</if>
		
		<if test="PAY_METHOD!= null and PAY_METHOD != ''">
			and  PAY_METHOD = #{PAY_METHOD}				
		</if>
		<if test="QD!= null and QD != ''">
			and  QD = #{QD}				
		</if>
		<if test="EMPLOYEE_ID!= null and EMPLOYEE_ID != ''">
			and  EMPLOYEE_ID = #{EMPLOYEE_ID}				
		</if>
		<if test="AMOUNT!= null and AMOUNT != ''">
			and  AMOUNT = #{AMOUNT}				
		</if>
		<if test="HALL_ID != null and HALL_ID != ''">
			and  HALL_ID = #{HALL_ID}				
		</if>
	</select>
	
	
	<select id="countOfdatalistPage" parameterType="pd" resultType="int">
		select
		count(*)
		from 
		<include refid="tableName"></include>
		where 
		1=1
		<!-- 关键词检索 -->
		<if test="PAY_ID!= null and PAY_ID != ''">
			and  PAY_ID = #{PAY_ID}				
		</if>
		<if test="CUSTOM_ID != null and CUSTOM_ID  != ''">
			and CUSTOM_ID = #{CUSTOM_ID}				
		</if>
<!-- 		XML中不允许出现 >或< 需要加<![CDATA[]]> 时间范围检索-->
		
		<if test="BEGINTIME!= null and BEGINTIME != ''">
		<![CDATA[	and  TIME>=#{BEGINTIME}	]]> 		
		</if>
		<if test="EMDTIME!= null and ENDTIME != ''">
		<![CDATA[	and  TIME <= #{ENDTIME}		]]>		
		</if>
		
		<if test="PAY_METHOD!= null and PAY_METHOD != ''">
			and  PAY_METHOD = #{PAY_METHOD}				
		</if>
		<if test="QD!= null and QD != ''">
			and  QD = #{QD}				
		</if>
		<if test="EMPLOYEE_ID!= null and EMPLOYEE_ID != ''">
			and  EMPLOYEE_ID = #{EMPLOYEE_ID}				
		</if>
		<if test="AMOUNT!= null and AMOUNT != ''">
			and  AMOUNT = #{AMOUNT}				
		</if>
		<if test="HALL_ID != null and HALL_ID != ''">
			and  HALL_ID = #{HALL_ID}				
		</if>
	</select>
	
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 列表数量(全部) -->
	<select id="countOflistAll" parameterType="pd" resultType="pd">
		select
		count(*)
		from 
		<include refid="tableName"></include>
	</select>
	
	
</mapper>