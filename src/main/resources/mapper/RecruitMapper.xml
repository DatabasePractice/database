<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="RecruitMapper">
	
	<!--表名 -->
	<sql id="tableName">
		oking_recruit
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		TIME,	
		NAME,	
		SEX,	
		AGE,	
		JG,	
		YPBM,	
		YPGW,	
		ZPQD,	
		LXDH,	
		YX,	
		XL,	
		BYXX,	
		ZY,	
		LXSJ,	
		MSSJ,	
		MSJG,	
		BZ,	
		ZPFZR,	
		FSA_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{TIME},	
		#{NAME},	
		#{SEX},	
		#{AGE},	
		#{JG},	
		#{YPBM},	
		#{YPGW},	
		#{ZPQD},	
		#{LXDH},	
		#{YX},	
		#{XL},	
		#{BYXX},	
		#{ZY},	
		#{LXSJ},	
		#{MSSJ},	
		#{MSJG},	
		#{BZ},	
		#{ZPFZR},	
		#{FSA_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			recruit_id = #{recruit_id}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			TIME = #{TIME},
			NAME = #{NAME},
			SEX = #{SEX},
			AGE = #{AGE},
			JG = #{JG},
			YPBM = #{YPBM},
			YPGW = #{YPGW},
			ZPQD = #{ZPQD},
			LXDH = #{LXDH},
			YX = #{YX},
			XL = #{XL},
			BYXX = #{BYXX},
			ZY = #{ZY},
			LXSJ = #{LXSJ},
			MSSJ = #{MSSJ},
			MSJG = #{MSJG},
			BZ = #{BZ},
			ZPFZR = #{ZPFZR},
		where 
		recruit_id = #{recruit_id}
	</update>
	
