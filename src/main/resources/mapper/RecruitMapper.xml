	<!-- 列表 -->
	<select id="datalistPage" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="name!= null and name != ''"><!-- 关键词检索 -->
			and name=#{name}
				
		</if>
	</select>
	
	<select id="datalistPageCount" parameterType="pd" resultType="Integer">
		select
		count(*)
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="name!= null and name != ''"><!-- 关键词检索 -->
			and name=#{name}
				
		</if>
	</select>
	
	
</mapper>